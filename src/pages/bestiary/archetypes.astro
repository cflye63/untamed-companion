			.usage-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 1.5rem; }
			.usage-card { background: var(--forest-dark); padding: 1.5rem; border-radius: 8px; border-left: 3px solid var(--amber); }
			.usage-card h4 { color: var(--leaf-green); font-size: 1.1rem; margin-bottom: 0.75rem; }
			.usage-card p { margin: 0; font-size: 0.95rem; }

