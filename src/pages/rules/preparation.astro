			* {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
			}

			:root {
				--forest-dark: #1a2e1a;
				--forest-green: #2d5016;
				--moss-green: #4a7c2f;
				--leaf-green: #6b9d3a;
				--amber: #d4a257;
				--earth-brown: #5c4033;
				--cream: #f5f1e8;
				--text-light: #e8e4d8;
			}

			body {
				font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
				background: var(--forest-dark);
				color: var(--text-light);
				line-height: 1.7;
				min-height: 100vh;
			}

			.container {
				max-width: 1000px;
				margin: 0 auto;
				padding: 0 2rem;
			}

			/* Navigation */
			.nav {
				background: var(--forest-green);
				border-bottom: 2px solid var(--amber);
				padding: 1rem 0;
				position: sticky;
				top: 0;
				z-index: 100;
			}

			.nav .container {
				display: flex;
				justify-content: space-between;
				align-items: center;
				max-width: 1200px;
			}

			.logo {
				font-size: 1.5rem;
				font-weight: 900;
				color: var(--amber);
				text-decoration: none;
				letter-spacing: 0.2rem;
			}

			.nav-links {
				display: flex;
				gap: 2rem;
			}

			.nav-links a {
				color: var(--cream);
				text-decoration: none;
				font-weight: 500;
				transition: color 0.3s;
			}

			.nav-links a:hover {
				color: var(--amber);
			}

			/* Breadcrumb */
			.breadcrumb {
				padding: 2rem 0 1rem;
			}

			.breadcrumb a {
				color: var(--leaf-green);
				text-decoration: none;
				font-weight: 500;
			}

			.breadcrumb a:hover {
				color: var(--amber);
			}

			/* Page Header */
			.page-header {
				padding: 2rem 0 2rem;
				text-align: center;
				border-bottom: 2px solid var(--amber);
				margin-bottom: 2rem;
			}

			.page-header h1 {
				font-size: 3rem;
				color: var(--amber);
				margin-bottom: 0.5rem;
			}

			.subtitle {
				font-size: 1.25rem;
				color: var(--leaf-green);
				font-style: italic;
			}

			/* Table of Contents */
			.toc {
				background: var(--moss-green);
				padding: 2rem;
				border-radius: 12px;
				border: 2px solid var(--amber);
				margin-bottom: 3rem;
			}

			.toc h2 {
				color: var(--amber);
				font-size: 1.5rem;
				margin-bottom: 1.5rem;
			}

			.toc-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
				gap: 2rem;
			}

			.toc-section h3 {
				color: var(--amber);
				font-size: 1.1rem;
				margin-bottom: 0.75rem;
			}

			.toc ul {
				list-style: none;
				margin-left: 0;
			}

			.toc li {
				margin-bottom: 0.5rem;
			}

			.toc a {
				color: var(--cream);
				text-decoration: none;
				font-size: 1rem;
				transition: color 0.3s;
			}

			.toc a:hover {
				color: var(--amber);
			}

			/* Content */
			.content {
				padding-bottom: 4rem;
			}

			/* Major Sections */
			.major-section {
				margin-bottom: 4rem;
				scroll-margin-top: 100px;
			}

			.section-title {
				font-size: 2.5rem;
				color: var(--amber);
				margin-bottom: 2rem;
				padding-bottom: 1rem;
				border-bottom: 3px solid var(--amber);
			}

			/* Subsections */
			.subsection {
				margin-bottom: 3rem;
				scroll-margin-top: 100px;
			}

			.subsection h3 {
				color: var(--leaf-green);
				font-size: 1.5rem;
				margin-bottom: 1rem;
			}

			/* Coming Soon Box */
			.coming-soon-box {
				background: var(--forest-green);
				padding: 2rem;
				border-radius: 8px;
				border: 2px dashed var(--earth-brown);
				text-align: center;
			}

			.coming-soon-box p {
				font-size: 1.1rem;
				color: var(--leaf-green);
			}

			/* Responsive */
			@media (max-width: 768px) {
				.nav .container {
					flex-direction: column;
					gap: 1rem;
				}

				.nav-links {
					gap: 1rem;
					flex-wrap: wrap;
					justify-content: center;
				}

				.page-header h1 {
					font-size: 2rem;
				}

				.section-title {
					font-size: 2rem;
				}

				.toc {
					padding: 1.5rem;
				}

				.toc-grid {
					grid-template-columns: 1fr;
					gap: 1.5rem;
				}
			}

			/* Smooth Scrolling */
			html {
				scroll-behavior: smooth;
			}
		</style>
	</body>
</html>
